@model IList<BlogPostListViewModel>
@section Meta{
    <title>Публикации от блога</title>
}
<section class="blog-posts wrapper">
    <header class="blog-posts-heading">
        <h2>Публикации от блога:</h2>
    </header>
    @for (int i = 0; i < Model.Count; i++)
    {
        Model[i].PositionClass = i % 2 == 0 ? "" : "left-aligned";
        @await Html.PartialAsync("_BlogPostListItemPartial", Model[i])
    }
</section>